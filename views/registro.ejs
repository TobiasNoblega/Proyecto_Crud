<!DOCTYPE html>
<html lang="es">
<head>
    <title>Registro</title>
    <%- include('./templates/head.ejs') %>
</head>
<body>
    <%- include('./templates/header-nav.ejs') %>
    <main class="centrado sombras">
        <div>
            <form action="/registrar" method="post" class="formulario">
                <fieldset>
                    <legend class="centrado">Registro</legend>
                    <div class="">
                        <div class="campos">
                            <label for="nombre">Nombre:</label>
                            <input 
                                type="text" 
                                name="nombre" 
                                id="nombre" 
                                placeholder="Tu nombre completo" 
                                required 
                                minlength="3" 
                                maxlength="45"
                                class="input">
                        </div>
                        <div class="campos">
                            <label for="usuario">Usuario:</label>
                            <input 
                                type="text" 
                                name="usuario" 
                                id="usuario" 
                                placeholder="Crea un nombre de usuario" 
                                required 
                                minlength="3" 
                                maxlength="45"
                                class="input">
                        </div>
                        <div class="campos">
                            <label for="email">Correo:</label>
                            <input 
                                type="email" 
                                name="email" 
                                id="email" 
                                placeholder="Tu correo electrónico" 
                                required
                                class="input">
                        </div>
                        <div class="campos">
                            <label for="password">Contraseña:</label>
                            <input 
                                type="password" 
                                name="password" 
                                id="password" 
                                placeholder="Crea una contraseña" 
                                required 
                                minlength="6"
                                class="input">
                        </div>
                    </div>
                    <div class="campos flex alinear-derecha">
                        <input class="boton" type="submit" value="Registrarme">
                        <a class="boton" href="/login">Volver al Login</a>
                    </div>
                </fieldset>
            </form>
        </div>
    </main>
    <%- include('./templates/footer.ejs') %>
</body>
</html>